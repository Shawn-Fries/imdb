<!DOCTYPE html>
<html>
  <head>
    <title>IMDb Clone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if logged_in? %>
      <%= button_to 'Log Out', session_url, method: :delete, class: 'log-out button' %>
    <% end %>
    <%= yield %>
  </body>
</html>
